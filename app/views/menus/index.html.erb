<div style = "margin-left: 20px; margin-right: 20px;">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="http://localhost:3000/menus">Menu</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="http://localhost:3000/orders/new?">Place an Order<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/food_orders/new?">Add to Order</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/orders?">View Order</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href='/logout'>Log Out</a>
        </li>
      </ul>
        <span class="navbar-text">
          <% if logged_in? %>
          <h5> <em>You are Logged In, <%= current_user.username %></em></h5>
          <%end%>
        </span>
    </div>
  </nav>

  <h1>Welcome to K&R Resturant</h1>
  <br>
  <h3>Please select a menu to see all the available items</h3>

  <div class="card-group">
    <% @menus.each do |m|%>

      <div class="card" style="width: 18rem;" >
        <img src="<%= m.image %>" class="card-img-top" alt="..." width="500" height="300">
          <div class="card-body">
              <h5 class="card-title"><%= m.name %></h5>
              <p class="card-text"><%= m.description %></p>
              <a href='menus/<%= m.id %>' class="btn btn-primary"> Let's eat</a>
          </div>
      </div>

    <% end %>
  </div>
</div>





