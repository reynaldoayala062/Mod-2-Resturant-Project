<div style = "margin-left: 20px; margin-right: 20px;">

  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="http://localhost:3000/menus">Menu</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="http://localhost:3000/orders/new?">Place an Order<span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/food_orders/new?">Add to Order</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="http://localhost:3000/orders?">View Order</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href='/logout'>Log Out</a>
        </li>
      </ul>
        <span class="navbar-text">
          <% if logged_in? %>
          <h5> <em>You are Logged In, <%= current_user.username %></em></h5>
          <%end%>
        </span>
    </div>
  </nav>

  <h1 class="capitalize" >Here is your order <%= @order.user.username %></h1>
  <br>
  <h3> If you wish to delete your order click "Delete" </h3>
  <%= button_to "Delete", { :action => "destroy"}, :method => :delete %>
  <br>
  <h3>Order Details</h3>
  <h5>Order Nmber: <%= @order.order_number %></h5>
  <h5>Food Items: </h5>
  <ul>
      <% @order.foods.each do |o| %>
          <li><%= o.name %></li><br>
          <p>Descripiton:</p> <%= o.description %><br><br>
          <p>Price: $<%= o.price %></p>
          <button type="button" class="btn btn-warning" href="/food_orders/<%= o.id%>">Remove</button>
          <hr>
      <% end%>
  </ul>
</div>
